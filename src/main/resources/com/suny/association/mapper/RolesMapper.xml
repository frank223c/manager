<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.suny.association.mapper.RolesMapper">
    <resultMap id="BaseResultMap" type="com.suny.association.entity.po.Roles">
        <id column="role_id" property="roleId"/>
        <result column="role_name" property="roleName"/>
        <result column="role_description" property="description"/>
        <result column="role_create_time" property="createTime"/>
    </resultMap>

    <resultMap id="AccountQuote" type="com.suny.association.entity.po.Account">
        <id property="accountId" column="account_id"/>
        <result property="accountName" column="account_name"/>
    </resultMap>

    <select id="queryQuote" parameterType="Integer" resultMap="AccountQuote">
        SELECT
        a.account_id,
        a.account_name
        FROM account AS a
        WHERE a.account_role_id = #{ roleId}
    </select>

    <insert id="insert" parameterType="com.suny.association.entity.po.Roles">
        INSERT INTO roles
        (role_name,role_description)
        VALUES
        (#{roleName},#{description})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM roles
        WHERE role_id = #{roleId}
    </delete>


    <update id="update" parameterType="com.suny.association.entity.po.Roles">
        UPDATE roles
        SET role_name = #{description}
        WHERE
            role_id = #{roleId}
    </update>


    <select id="selectAll" resultMap="BaseResultMap">
        SELECT
        r.role_id,
        r.role_name,
        r.role_description,
        r.role_create_time
        FROM roles AS r
    </select>

    <select id="selectById" parameterType="Integer" resultMap="BaseResultMap">
        SELECT
        r.role_id,
        r.role_name,
        r.role_description,
        r.role_create_time
        FROM roles AS r
        WHERE r.role_id = #{roleId}
    </select>

    <select id="selectByName" parameterType="String" resultMap="BaseResultMap">
        SELECT
        r.role_id,
        r.role_name,
        r.role_description,
        r.role_create_time
        FROM roles AS r
        WHERE r.role_name LIKE CONCAT(CONCAT('%', #{description}), '%')
    </select>


    <select id="selectByParam" parameterType="hashmap" resultMap="BaseResultMap">
        SELECT
        r.role_id,
        r.role_name,
        r.role_description,
        r.role_create_time
        FROM roles AS r
        <where>
            1=1
            <if test="entity.roleId != null">and  role_id =#{entity.roleId}</if>
            <if test="entity.roleName != null"> and role_name =#{entity.roleName}</if>
            <if test="entity.description != null">and role_description like "%" #{entity.description} "%"</if>
        </where>
        LIMIT
            #{offset},
            #{limit}
    </select>

    <select id="selectCount" resultType="int">
        SELECT count(*)
        FROM roles;
    </select>
    <select id="selectCountByParam" parameterType="com.suny.association.entity.po.Roles" resultType="java.lang.Integer">
        SELECT
            count(*)
        FROM roles AS r
            <where>
                1=1
                <if test="roleId != null">and  role_id =#{roleId}</if>
                <if test="roleName != null"> and role_name =#{roleName}</if>
                <if test="description != null">and role_description like "%" #{description} "%"</if>
            </where>
    </select>


</mapper>